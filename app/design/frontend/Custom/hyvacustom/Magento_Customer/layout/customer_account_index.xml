<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magento_Customer::css/customer-title.css" />
    </head>
    <body>
        <!-- Override page title -->
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument name="title" xsi:type="string">Mans profils</argument>
            </action>
        </referenceBlock>
        
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="label" xsi:type="string">SƒÅkums</item>
                    <item name="link" xsi:type="string">/</item>
                </argument>
            </action>

            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">my_account</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="label" xsi:type="string">Mans profils</item>
                    <item name="link" xsi:type="string">/customer/account/</item>
                </argument>
            </action>
        </referenceBlock>
        
        <referenceBlock name="customer_account_dashboard_info" remove="true" />
        <referenceBlock name="customer_account_dashboard_address" remove="true" />
    </body>
</page>
