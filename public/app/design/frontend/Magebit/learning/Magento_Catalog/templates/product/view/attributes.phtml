<?php
/** @var $block \Magento\Catalog\Block\Product\View\Attributes */
$product = $block->getProduct();
$attributeCodes = ['dimensions', 'color', 'material'];
$displayed = [];
$attributes = $product->getAttributes();

// First, try to get the requested attributes
foreach ($attributeCodes as $code) {
    if (isset($attributes[$code]) && $value = $attributes[$code]->getFrontend()->getValue($product)) {
        if ($value && $value != 'No') {
            $displayed[$attributes[$code]->getStoreLabel()] = $value;
        }
    }
}

// If less than 3, fill with other attributes
if (count($displayed) < 3) {
    foreach ($attributes as $attr) {
        $code = $attr->getAttributeCode();
        if (in_array($code, $attributeCodes)) continue;
        $value = $attr->getFrontend()->getValue($product);
        if ($value && $value != 'No' && $attr->getIsVisibleOnFront()) {
            $displayed[$attr->getStoreLabel()] = $value;
            if (count($displayed) >= 3) break;
        }
    }
}
?>

<div class="product-attributes-container">
    <ul class="product-attributes">
        <?php foreach ($displayed as $label => $value): ?>
            <li>
                <strong><?= $block->escapeHtml(__($label)) ?>:</strong>
                <?= $block->escapeHtml($value) ?>
            </li>
        <?php endforeach; ?>
    </ul>
    <?php if ($product->getShortDescription()): ?>
        <div class="product-short-description">
            <?= $block->escapeHtml(strip_tags($product->getShortDescription())) ?>
        </div>
    <?php endif; ?>
</div>